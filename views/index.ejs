  <div id="artcrawl-container" class="container-fluid">
    <div id="header" class="row align-items-center justify-content-md-between">
      <div id="legend" class=""></div>
      <h2 class="header">Clough Art Crawl</h2>
    </div>
    <div id="artcrawl" class="row align-items-center">
      <div class="slider order-first col-xl-6 justify-content-center align-items-center">
        <div class="splide">
          <div class="splide__track">
            <ul class="splide__list">
                <% for (let i = 0; i < data.length; i++) { %>
                  <li class="splide__slide">
                    
                    <img class="" data-id="<%=i%>" data-splide-lazy="/images/artcrawl/<%= data[i]['Image File'] %>"/>
                    
                    <p><em><%=data[i]['Title of Artwork']%></em>, <%=data[i]['First Name']%> <%=data[i]['Last Name']%>, <%=data[i]['Major']%></p>
                  </li>
                <% } %>
            </ul>
          </div>
        </div>
      </div>
      <div id="grid-container" class="hide order-last col-xl-6">
        <div class="row flex-wrap">
        <div class="col-xl-12 order-sm-last order-xl-first">
          <div class="controls row">
            <fieldset id="sort-group" class="control col-lg col-xl-4 group">
              <legend>shuffle</legend>
              <div id="sort-options" class="btn-group flex-wrap options">
                <label id="sort-btn-1" class="btn active">
                  <input type="radio" name="sort-value" value="last-name" /> name
                </label>
                <label id="sort-btn-2" class="btn">
                  <input type="radio" name="sort-value" value="major" /> major
                </label>
                <label id="sort-btn-3" class="btn">
                  <input type="radio" name="sort-value" value="title" /> title
                </label>
              </div>
            </fieldset>
            <div id="color-group" class="control order-last col-lg-2 col-xl-2">
              <label for="color-btn">color</label>
              <button id="color-btn" class="btn">college</button>
            </div>
            <form id="search-group" class="control col-lg col-xl-3 group">
              <label for="search">artist, title, or major</label>
              <input id="search" type="search" autocomplete="off"/>
              <input type="search" style="display: none;"/>
            </form>
            <fieldset id="filters-group" class="control col-lg col-xl-3 group">
              <legend>filter</legend>
                <div id="filter-options" class="btn-group flex-wrap options">
                  <label class="btn active">
                    <input type="radio" name="filter-value" value="all" /> all
                  </label>
                  <label id="major-filter" class="btn">
                    <input type="radio" name="filter-value" value="major" /> major
                  </label>
                </div>
            </fieldset>
          </div>
        </div>
        <div class="grid-col order-first col">
          <div id="grid" class="">
            <% for (let i = 0; i < data.length; i++) { %>
                <figure id="<%=i%>" class="art-crawl-item gallery" data-groups='["<%= data[i]['Major'] %>"]' data-username="<%= data[i]['Username'].toLowerCase()%>" data-first-name="<%= data[i]["First Name"] %>" data-last-name="<%= data[i]['Last Name'] %>"
                  data-major="<%= data[i]['Major'] %>" data-title="<%= data[i]['Title of Artwork'] %>" data-artist-statement="<%= data[i]['Artist Statement'] %>">
                <img src="/images/thumbnails/<%= data[i]['Image File']%>" />
            </figure>
            <% } %>
            <div class="sizer-element"></div>
          </div>
        </div>
        </div>
      </div>
      <div id="footer" class="hide col order-last">
        <div class="footer__btns row justify-content-end align-items-md-end">
            <div class="grid-slider-toggle">
              <i id="grid-toggle" class="footer__btn fas fa-th"></i>
              <i id="slider-toggle" class="hide footer__btn fas fa-images"></i>
            </div>
            <div>
              <i class="footer__btn fas fa-info-circle"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

